# Example environment configuration for Say, Pi.
# Copy this file to `.env` for local development (`npm run dev`) and to `.env.production`
# for production builds (`npm run build`). Override values as needed for your setup.

# Server URLs
VITE_APP_SERVER_URL=https://app.saypi.ai
VITE_API_SERVER_URL=https://api.saypi.ai
VITE_AUTH_SERVER_URL=https://www.saypi.ai
# For local stacks, uncomment and update the overrides below:
# VITE_API_SERVER_URL=https://localhost:5001
# VITE_AUTH_SERVER_URL=http://localhost:3000

# Google Analytics configuration
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA_API_SECRET=XXXXXXXXXX
VITE_GA_ENDPOINT=https://www.google-analytics.com/mp/collect
# For GA debug endpoint during local testing, use:
# GA_ENDPOINT=https://www.google-analytics.com/debug/mp/collect

# Feature flags
VITE_KEEP_SEGMENTS=false
VITE_DEBUG_LOGS=true
VITE_DEV_MODE=false

# JWT configuration (optional)
# VITE_AUTH_SESSION_LIFETIME=360
