{
  "configurations": [
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "type": "msedge",
      "name": "Hey Pi",
      "request": "launch",
      "url": "https://pi.ai/talk"
    },
    {
      "type": "msedge",
      "name": "Say, Pi (update script)",
      "request": "launch",
      "url": "https://localhost:4443/saypi.user.js"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Say, Pi (application server)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "start"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Vitest Tests",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["vitest"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Vitest Tests (Debug)",
      "runtimeExecutable": "npx",
      "runtimeArgs": [
        "vitest",
        "--inspect-brk",
        "test/tts/TextToSpeechService.spec.ts"
      ]
    }
  ]
}
