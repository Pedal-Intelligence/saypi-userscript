{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.6.9",
  "description": "__MSG_appDescription__",
  "permissions": ["storage"],
  "host_permissions": ["https://api.saypi.ai/*"],
  "content_scripts": [
    {
      "matches": ["https://pi.ai/*"],
      "js": ["public/saypi.user.js"]
    }
  ],
  "background": {
    "service_worker": "public/background.js"
  },
  "icons": {
    "16": "src/icons/bubble-16px.png",
    "32": "src/icons/bubble-32px.png",
    "48": "src/icons/bubble-48px.png",
    "128": "src/icons/bubble-128px.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "public/silero_vad.onnx",
        "public/*.wasm",
        "public/vad.worklet.bundle.js",
        "public/vad.worklet.bundle.min.js",
        "public/ort-wasm*",
        "public/audio/*.mp3",
        "public/icons/*.svg",
        "public/icons/*.png",
        "public/icons/logos/*.svg",
        "public/icons/logos/*.png",
        "src/icons/flags/*.svg",
        "src/popup/*.svg"
      ],
      "matches": ["https://pi.ai/*"]
    }
  ],

  "author": "Ross Cadogan",
  "homepage_url": "https://www.saypi.ai",
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "gecko@saypi.ai"
    }
  }
}
